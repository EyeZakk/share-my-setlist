<div class="page-header">
	<h1>All Of The Statuses</h1>
</div>
<%= link_to 'Post Status', new_status_path, class: "btn btn-sucess" %><br><br>

<% @statuses.each do |status| %>
<div class=" well status">
	<strong><%= status.name %></strong>
	<p><%= status.content%></p>

	<div class="meta">
		<%= link_to time_ago_in_words(status.created_at) + " ago", status%> |
		<space class="admin">
			<%= link_to "Edit", edit_status_path(status)%> |
			<%= link_to "Delete", status, method: :delete, data: {confirm: "Are you sure you want to delete yours status?"}%>
			
	</div>
</div>
<%end%>

<br />


